				<ul>
				{% for item in navigation.items %}
					<li>
						<a href="{{ item.url }}" {{ helpers.getLinkActiveState(item.url, page.url) | safe }} class="{{ item.class }}" target="{{ item.target }}">{{ item.text }}</a>
					</li>
					{% endfor %}
				</ul>
			</nav>
    </header>

		<main id="skip" class="main">
			{{ content | safe }}
